{
  "name": "nyr",
  "version": "1.1.0",
  "description": "A tiny helper that knows if you are running a script via npm or Yarn, to let you chain your commands for either.",
  "main": "index.js",
  "bin": "cli.js",
  "repository": "simonkberg/nyr",
  "author": "Simon Kjellberg <simon.kjellberg@gmail.com>",
  "license": "MIT",
  "keywords": [
    "npm",
    "yarn",
    "run",
    "scripts",
    "npm-yarn-run"
  ],
  "scripts": {
    "pretest": "eslint \"*.js\" \"test/*.js\"",
    "test": "node test",
    "test:npm": "node test/npm",
    "test:yarn": "node test/yarn",
    "start": "DEBUG=nyr node ./index.js"
  },
  "engine": {
    "node": ">=4"
  },
  "devDependencies": {
    "@simonkberg/eslint-config": "^6.0.0",
    "eslint": "^3.19.0"
  },
  "files": [
    "index.js",
    "cli.js"
  ]
}
